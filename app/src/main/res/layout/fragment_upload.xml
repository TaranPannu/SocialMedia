<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_night_foreground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UploadFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/ImageUpload"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_prof_img"
        android:layout_width="330dp"
        android:layout_height="200dp"
app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


<com.google.android.material.textfield.TextInputLayout
    android:layout_width="350dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:id="@+id/TitlUpload"
    app:layout_constraintTop_toBottomOf="@+id/ImageUpload"
    android:layout_height="wrap_content">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/TitleUpload"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/DeUpload"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/TitlUpload"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/DesUpload"
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_height="150dp"
            android:hint="Description"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btnUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"

        app:layout_constraintTop_toBottomOf="@+id/DeUpload"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="#023E7E"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>