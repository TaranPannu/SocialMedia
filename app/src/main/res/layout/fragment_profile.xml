<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5C4C4"
    tools:context=".Fragment.ProfileFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/st"
            android:background="#807F7F">
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatarIv"
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:scaleType="centerCrop"
                android:background="@color/design_default_color_primary"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_users_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Name"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/emailTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Email"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/phoneTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Phone"
                    android:textColor="@color/white" />
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/imgUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/st"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="#393838"
            android:text="Select Image"
            android:textColor="@color/white" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
android:layout_below="@+id/imgUpdate"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"
            android:hint="Name"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/nameUpdate"
/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_below="@+id/imgUpdate"
            android:layout_marginTop="72dp"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"
            android:hint="abc@gmail.com"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/emailUpdate"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/UpdateProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgUpdate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="145dp"
            android:backgroundTint="#393838"
            android:text="update profile" />

    </RelativeLayout>



</ScrollView>